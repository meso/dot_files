export TERM=xterm-color
alias ls='ls -G'
alias ll='ls -hl'

if [ -f ~/.nvm/nvm.sh ]; then
  . ~/.nvm/nvm.sh
fi

if [ -f "/usr/local/Cellar/git/1.7.6/etc/bash_completion.d/git-completion.bash" ]; then
  . /usr/local/Cellar/git/1.7.6/etc/bash_completion.d/git-completion.bash
  export PS1="$PS1$(__git_ps1)"
  PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[31m\]$(__git_ps1)\[\033[00m\]\$ '
fi
